<Page x:Class="KURSOVAYA.View.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KURSOVAYA.View.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1200"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="60" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="30" />
                <RowDefinition Height="60" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <TextBlock Text="Добро пожаловать в ФИШКА!" FontWeight="Bold"  TextWrapping="Wrap" Grid.Row="1" FontSize="50"/>
            <TextBlock Text="Ваш билет на незабываемые эмоции — бронируйте места в зале и наслаждайтесь шоу!"
                       TextWrapping="Wrap" Grid.Row="3"  FontSize="40" FontStyle="Italic"/>

            <Button Name="CatalogBtn" Content="ЗАПИСАТЬСЯ" Width="200" Grid.Row="5" Click="CatalogBtn_Click"/>
                

        </Grid>

        <Grid Grid.Column="2" Margin="30" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
                <RowDefinition Height="10" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="10" />
                <ColumnDefinition Width="1*" />
            </Grid.ColumnDefinitions>
            <TextBlock Text="Фото со съемок"  HorizontalAlignment="Center" Grid.ColumnSpan="3"
                       FontWeight="Bold" FontSize="40" />

            <Image Source="/Resource/SHOW11.jpg"   Grid.Row="4"/>
            <Image Source="/Resource/SHOW2.jpg"  Grid.Column="2" Grid.Row="2" />
            <Image Source="/Resource/SHOW33.jpg" Grid.Row="2"/>
            <Image Source="/Resource/SHOW4.jpg" Grid.Column="2" Grid.Row="4"/>

            
        </Grid>


    </Grid>
</Page>
